
@model Asset_OracleLogger.Models.SV_LOGGER
@{
    Layout = null;
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/SoapLoggerScript.js"></script>
<script src="~/Scripts/LoggerScript.js"></script>
<div class="container">

    @using (Html.BeginForm("_CopyDetailSoap", "SoapLogger", FormMethod.Post))
    {
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Copy Records based On Release</div>
            </div>
            <div style="padding-top:10px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <form id="loginform" class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="lastname" class="col-md-3 control-label">Release</label>
                        <div class="input-group col-md-9">
                            @Html.DropDownList("RELEASE", (IEnumerable<SelectListItem>)ViewData["dbSoapMyRelease"], "Select Release", new { id = "ddlRelease", @class = "form-control col-md-6", @title = "01.2018", @name = "Release" })
                            @Html.ValidationMessageFor(model => model.RELEASE, string.Empty, new { @class = "error-message", @style = "color: red" })
                            <p style="color: red">@TempData["ErrorResponse"]</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-3 input-group col-md-9">
                            <button id="btnlogin" name="Login" type="submit" value="Login" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Submit</button>&nbsp; &nbsp; &nbsp;
                            <button id="btnCancel" name="Cancel" type="submit" value="cancel" class="btn btn-info" onclick="windowClose();"><i class="icon-hand-right"></i> &nbsp Cancel</button>
                        </div>
                    </div>
                    @if (ViewBag.ShouldClose != null)
                    {
                        <script type="text/javascript">
                            window.close();
                            window.opener.location.reload();
                        </script>
                    }
                    @*onclick="windowClose();*@
                    <div class="form-group row ">
                        <!-- Button -->
                        <div class="col-md-offset-3 input-group col-md-9">
                            <b style="color:red;text-align:left;">@Html.Raw(TempData["msg"])</b>

                        </div>
                    </div>
                </form>
            </div>
        </div>

    }
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnCancel').click(function () {
            window.close();
            window.opener.location.reload();
        });
    });
</script>
